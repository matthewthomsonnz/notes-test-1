name: Deploy to GitHub Pages

on:
  push:
    branches:
      - main

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'

      - name: Install dependencies
        run: npm install

      - name: Build project
        run: npm run build

      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          # The GitHub token is automatically provided by the workflow environment.
          github_token: ${{ secrets.GITHUB_TOKEN }}
          # The directory that contains the build output.
          publish_dir: ./dist
          # The branch to which the built files will be deployed.
          publish_branch: gh-pages
